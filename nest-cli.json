{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "plugins": [
      {
        "name": "@nestjs/swagger",
        "options": {
          "classValidatorShim": false,
          "introspectComments": true
        }
      }
    ],
    "assets": [
      {
        "include": "email/templates/**/*",
        "outDir": "dist/src/"
      }
    ],
    "watchAssets": true
  }
}
